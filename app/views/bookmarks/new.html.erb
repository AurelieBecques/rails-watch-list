<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add a new movie</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit class: 'btn btn-primary mt-4' %>
      <% end %>
      <%= link_to "Back to bookmark", bookmarks_path %>
    </div>
  </div>
</div>
