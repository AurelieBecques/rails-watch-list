<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All lists</h1>
      <ul class="list-group mb-3">
        <% @lists.each do |list| %>
          <li class="list-group-item">
            <div class="container space-between">
              <div><%= link_to list.name, list_path(list) %></div>
              <div><%= link_to "delete this list", list_path(list), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" }%></div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new List", new_list_path %>
    </div>
  </div>
</div>
